	SUB	"Hm1c1701" { TEXT "Builder walk with thee." }
	SUB	"Hm1c1801" { TEXT "Good even." }
	SUB	"Hm1c1902" { TEXT "I praise The Builder." }
	SUB	"Hm1c2302" { TEXT "Well met." }
